<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Sistema Embedidos
            </button>
			<div class="dropdown-menu" aria-labelledby="dropdownMenu2">
				<button class="dropdown-item" type="button">@Html.ActionLink("Menu", "Index", "Home", new { area = "" })</button>
				<button class="dropdown-item" type="button">@Html.ActionLink("About", "About", "Home")</button>
				<button class="dropdown-item" type="button">@Html.ActionLink("Contact", "Contact", "Home")</button>
				<button class="dropdown-item" type="button">@Html.ActionLink("Consultar", "Consultar", "Home")</button>
				<button class="dropdown-item" type="button">@Html.ActionLink("Consultar Imagenes", "ConsultarImagenes", "Home")</button>
				<button class="dropdown-item" type="button">@Html.ActionLink("Consultar Cara", "ConsultarCara", "FaceApi")</button>
			</div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
